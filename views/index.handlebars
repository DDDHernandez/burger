<div class="container">

  <div class="jumbotron text-center bg-success text-white">
    <h1 class="display-2" id="SixGuys">Six Guys Burgers<img id="logo" src="/assets/img/burger-block.png"></h1>
    <p class="Intro">Welcome to Six Guys Burgers. Voted for the BEST sextuple cheeseburgers!</p>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="card border border-success">
        <div class="card-header text-white">
         What Can I Get For You Today?
        </div>
        <div class="card-body">
          <form class="create-form">
            <div class="form-group">
              <label for="burger" id="OrderUp">Please Place Order Here:</label>
              <input type="text" class="form-control" id="burgerOrder" placeholder="">
            </div>
            <button class="btn btn-success" type="submit">Place Order</button>
          </form>
        </div>
      </div>
    </div>
  </div>


  <div class="row mt-3" id="OrdersUp">
    <div class="col-sm-12 col-md-12 col-lg-6 mt-3">
      <div class="card border border-success">
        <div class="card-header text-white">
         Burgers Ready
        </div>
        <!--These are burgers are ready to be devoured-->
        <div class="card-body">
              {{#each burgers}}
                {{#unless devoured}}
                  {{> burgers/burger-block devour=false}}
                {{/unless}}
              {{/each}}
        </div>
      </div>
    </div>

    <div class="col-sm-12 col-md-12 col-lg-6 mt-3">
      <div class="card border-success">
        <div class="card-header text-white" id="devoured-card-header">
         Burgers Consumed
        </div>
        <!--Burger has been devoured-->
        <div class="card-body">
          {{#each burgers}}
              {{#if devoured}}
                {{> burgers/burger-devoured devour=true}}
              {{/if}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>
<br>
  <div class="row" id="footer">
    <div class="col-sm-12 col-md-12 bg-success">
          <h5 class="title text-white" id="footertitle">Six Guys Burgers</h5>
          <p class="text-white" id="footertext">Six Guys Burgers Appreciates You Stopping By, Please Come Again</p>
    </div>
</div>






